<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>distribution</id>
	<formats>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>src/main/config</directory>
			<includes>
				<include>*.txt</include>
				<include>*.xml</include>
			</includes>
			<outputDirectory>/conf</outputDirectory>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>COPYING</source>
			<outputDirectory>/</outputDirectory>
		</file>
		<file>
			<source>README</source>
			<outputDirectory>/</outputDirectory>
			<filtered>true</filtered>
		</file>
		<file>
			<source>${project.build.outputDirectory}/log4j.properties</source>
			<outputDirectory>/conf</outputDirectory>
		</file>
		<file>
			<source>${project.build.outputDirectory}/omeglespy-z</source>
			<outputDirectory>/bin</outputDirectory>
		</file>
		<file>
			<source>${project.build.outputDirectory}/omeglespy-z.bat</source>
			<outputDirectory>/bin</outputDirectory>
		</file>
		<file>
			<source>${project.build.outputDirectory}/omeglespy-z-alt.bat</source>
			<outputDirectory>/bin</outputDirectory>
		</file>
		<file>
			<source>${project.build.directory}/${project.artifactId}-${project.version}.jar</source>
			<outputDirectory>/lib</outputDirectory>
		</file>
	</files>
</assembly>